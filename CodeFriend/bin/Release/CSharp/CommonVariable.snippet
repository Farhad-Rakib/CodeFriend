<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2017/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Common Variable</Title>
      <Shortcut>cmv</Shortcut>
      <Description>Code snippet for Common  Variable </Description>
      <Author>Farhad Rakib</Author>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
        <SnippetType>SurroundsWith</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>

        <Literal>
          <ID>CreatedDate</ID>
          <ToolTip>Enter date of creation</ToolTip>
          <Default>[Insert Date]</Default>
        </Literal>

        <Literal>
          <ID>Developer</ID>
          <ToolTip>Enter your name</ToolTip>
          <Default>[My Name]</Default>
        </Literal>


        <Literal>
          <ID>Description</ID>
          <ToolTip>Enter your name</ToolTip>
          <Default>[Description of Class]</Default>
        </Literal>   
        <Literal>
          <ID>AccessModifier</ID>
          <ToolTip>Access Modifier(Public,Private,Protected)</ToolTip>
          <Default>[Access modifier]</Default>
        </Literal>   
        <Literal>
          <ID>DataType</ID>
          <ToolTip>Enter Data Type(String,Long,Int,Boolean)</ToolTip>
          <Default>[Data Type]</Default>
        </Literal>.
        <Literal>
          <ID>VariableName</ID>
          <ToolTip>Enter your variable Name</ToolTip>
          <Default>[Name Of Variable]</Default>
        </Literal>

      </Declarations>
      <Code Language="csharp">
        <![CDATA[
       
      $AccessModifier$ $DataType$ $VariableName$;
          ]]>
      </Code>
    </Snippet>
  </CodeSnippet>


</CodeSnippets>



